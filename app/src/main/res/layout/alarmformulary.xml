<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/alarmformulary"
    android:layout_margin="30dp"
    android:background="@color/text_color_clear"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            style="@style/text_title_new_reminder"
            android:text="Medication name:" />

        <EditText
            android:id="@+id/from_this_day"
            style="@style/text_edit_new_reminder"
            android:inputType="text" />

        <TextView
            style="@style/text_title_new_reminder"
            android:text="From:" />

        <EditText
            android:id="@+id/to_this_day"
            style="@style/text_edit_new_reminder"
            android:editable="false" />

        <TextView
            style="@style/text_title_new_reminder"
            android:text="To:" />


        <EditText
            android:id="@+id/medication_name_edit_text"
            style="@style/text_edit_new_reminder"
            android:editable="false" />

        <TextView
            style="@style/text_title_new_reminder"
            android:text="Time between each dose:" />

        <EditText
            android:id="@+id/timepicker_edit_text"
            style="@style/text_edit_new_reminder"
            android:editable="false" />

        <TextView
            style="@style/text_title_new_reminder"
            android:text="Dose type:" />

        <Spinner
            android:id="@+id/dose_type_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />

        <TextView
            style="@style/text_title_new_reminder"
            android:text="Dose quantity:" />

        <EditText
            android:id="@+id/dose_quantity"
            style="@style/text_edit_new_reminder"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/start"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:textColor="@color/colorAccent"
            android:text="START" />

    </LinearLayout>
</ScrollView>