<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/background"
    app:cardCornerRadius="25dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_med_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/title_text_adapter_reminder"
                android:textColor="@color/white"
                android:text="Medication Name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/text_dose_size"
                    style="@style/small_text_adapter_reminder2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size" />

                <TextView
                    android:id="@+id/text_dose_type"
                    style="@style/small_text_adapter_reminder3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DoseType" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/text_dose_time"
                    style="@style/small_text_adapter_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dose Time" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/text_start_date"
                    style="@style/small_text_adapter_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/text_end_date"
                    style="@style/small_text_adapter_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End" />
                <!--<LinearLayout-->
                <!--android:layout_width="1dp"-->
                <!--android:layout_height="12dp"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:background="@color/colorPrimary" />-->

                <!--<TextView-->
                <!--android:id="@+id/text_time_dose"-->
                <!--style="@style/small_text_adapter_reminder"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="hola2" />-->


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Switch
                android:id="@+id/switchR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>